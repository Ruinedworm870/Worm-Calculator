<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WormCalculator.MainPage">

    <StackLayout>

        <Label Text="{Binding DisplayNumber}" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
                                    
        <Button Text="=" Clicked="HandleSymbolButtons"/>
        <Button Text="+" Clicked="HandleSymbolButtons"/>
        
        <Button Text="1" Clicked="HandleNumberButtons"/>
        <Button Text="2" Clicked="HandleNumberButtons"/>
        <Button Text="3" Clicked="HandleNumberButtons"/>
        <Button Text="4" Clicked="HandleNumberButtons"/>
        <Button Text="5" Clicked="HandleNumberButtons"/>
        <Button Text="6" Clicked="HandleNumberButtons"/>
        <Button Text="7" Clicked="HandleNumberButtons"/>
        <Button Text="8" Clicked="HandleNumberButtons"/>
        <Button Text="9" Clicked="HandleNumberButtons"/>
        <Button Text="0" Clicked="HandleNumberButtons"/>

    </StackLayout>

</ContentPage>
